# Production Environment Configuration for invoice-ingestion

# GCP Project
GCP_PROJECT_ID=your-prd-project-id

# Billing Account Configuration
# Comma-separated list of billing account IDs to process
# Leave empty to fetch all accessible billing accounts
BILLING_ACCOUNT_IDS=

# BigQuery Billing Export Configuration
# Dataset where billing export tables are stored
BILLING_DATASET=billing_export
# Table name prefix (default: gcp_billing_export_v1)
BILLING_TABLE_PREFIX=gcp_billing_export_v1

# Firestore Configuration
FIRESTORE_DATABASE=cost-db
FIRESTORE_COLLECTION=invoices

# Project Enrichment Configuration
# Collection containing project metadata (appcode, lob, etc.)
ENRICHMENT_DATABASE=dashboard
ENRICHMENT_COLLECTION=projects
# Field name in enrichment documents that contains the project ID
ENRICHMENT_PROJECT_ID_FIELD=project_id
# Fields to enrich invoice line items with
ENRICHMENT_FIELDS=appcode,lob

# Invoice Processing Configuration
# Number of months back to fetch invoices (default: 12)
MONTHS_BACK=12
# Include invoice line items (True/False)
INCLUDE_LINE_ITEMS=True

# Logging
LOG_LEVEL=INFO
