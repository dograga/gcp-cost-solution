# Development Environment Configuration for cost-recommendation

# GCP Project
GCP_PROJECT_ID=evol-dev-456410

# Scope Configuration
# SCOPE_TYPE: 'project', 'folder', or 'organization'
SCOPE_TYPE=organization
# SCOPE_ID: For project mode, use project ID. For folder/org, use folder/org ID
SCOPE_ID=922071633244

# Firestore Configuration
FIRESTORE_DATABASE=cost-db
FIRESTORE_COLLECTION=cost_recommendations_dev

# Project Inventory Configuration
# Set to 'true' to read projects from inventory collection instead of API
USE_INVENTORY_COLLECTION=true
# Inventory database (defaults to FIRESTORE_DATABASE if not specified)
INVENTORY_DATABASE=dashboard
INVENTORY_COLLECTION=projects
# Field name in inventory documents that contains the project ID
INVENTORY_PROJECT_ID_FIELD=project_id

# Recommender Configuration
# Leave empty to fetch ALL available recommender types
RECOMMENDER_TYPES=

# Filter by recommendation state
RECOMMENDATION_STATE_FILTER=ACTIVE

# Performance Configuration
# Number of parallel threads (10-20 recommended for 100+ projects)
MAX_WORKERS=15
# Firestore batch size (max 500)
FIRESTORE_BATCH_SIZE=500

# Logging (use INFO for production, DEBUG for troubleshooting)
LOG_LEVEL=INFO
