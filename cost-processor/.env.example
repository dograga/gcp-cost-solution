# Example Environment Configuration for cost-processor
# Copy this file to .env.dev, .env.uat, or .env.prd and update with your values

# GCP Project
GCP_PROJECT_ID=your-project-id

# BigQuery Configuration
SOURCE_DATASET_ID=billing_data
SOURCE_TABLE_ID=daily_costs
OUTPUT_DATASET_ID=billing_reports
BQ_LOCATION=US

# Firestore Configuration
FIRESTORE_PROJECT_ID=your-project-id
FIRESTORE_DATABASE=(default)
FIRESTORE_COLLECTION_PREFIX=cost_reports

# Processing Configuration
DAYS_BACK=30
TOP_COST_DRIVERS_COUNT=20
TOP_COST_DRIVERS_DAYS=7

# Logging
LOG_LEVEL=INFO
