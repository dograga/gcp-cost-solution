# Example Environment Configuration for cost-anomalies

# GCP Project
GCP_PROJECT_ID=your-project-id

# BigQuery Billing Export Configuration
BILLING_DATASET=billing_data
BILLING_TABLE=daily_costs
BQ_LOCATION=US

# Firestore Configuration
FIRESTORE_DATABASE=cost-db
FIRESTORE_COLLECTION=cost_anomalies

# Project Enrichment Configuration
# Collection containing project metadata (appcode, lob, etc.)
ENRICHMENT_DATABASE=dashboard
ENRICHMENT_COLLECTION=projects
# Field name in enrichment documents that contains the project ID
ENRICHMENT_PROJECT_ID_FIELD=project_id
# Fields to enrich anomalies with
ENRICHMENT_FIELDS=appcode,lob

# Anomaly Detection Configuration
# Percentage increase threshold to flag as anomaly (e.g., 50 = 50% increase)
ANOMALY_THRESHOLD_PERCENTAGE=50
# Minimum cost change amount to include (in USD, all currencies converted to USD)
MIN_IMPACT_AMOUNT=100
# Number of days to compare against (e.g., 7 = compare current vs 7 days ago)
COMPARISON_DAYS=7

# Time Range Configuration
# Number of days back to fetch anomalies
DAYS_BACK=30

# Logging
LOG_LEVEL=INFO
