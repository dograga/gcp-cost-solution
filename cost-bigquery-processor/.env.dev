# Development Environment Configuration for cost-bigquery-processor

# GCP Project
GCP_PROJECT_ID=evol-dev-456410

# BigQuery Configuration
# Dataset where billing export is stored
BILLING_DATASET=billing_export
# Table name prefix (e.g., gcp_billing_export_v1)
BILLING_TABLE_PREFIX=gcp_billing_export_v1
# Billing account IDs (comma-separated, leave empty to auto-discover)
BILLING_ACCOUNT_IDS=

# Firestore Configuration
FIRESTORE_DATABASE=cost-db
FIRESTORE_COLLECTION=daily_costs

# Project Enrichment Configuration
ENRICHMENT_DATABASE=dashboard
ENRICHMENT_COLLECTION=projects
ENRICHMENT_PROJECT_ID_FIELD=project_id
ENRICHMENT_FIELDS=appcode,lob

# Processing Configuration
# Number of days back to fetch data (default: 7)
DAYS_BACK=7
# Aggregation level: daily, project, service
AGGREGATION_LEVEL=daily
# Include line-level details (True/False)
INCLUDE_DETAILS=True

# Logging
LOG_LEVEL=INFO
